<div class="my-3" id="<%= dom_id venue %>">
    <div class="card" style="width: 25rem;">
      <div class="card-header bg-white">
        <div class="d-flex justify-content-between">
            <div>
                <%= link_to venue, class: "a-decoration-none" do %>
                    <% if venue.profile_picture.attached? %>
                        <%= image_tag venue.profile_picture, class: "img-thumbnail rounded-circle", style: "width: 10%" %>
                    <% else %>
                        <%= image_tag 'thumbnail.png', class: "img-thumbnail rounded-circle", style: "width: 12%" %>
                    <% end %>
                <% end %>
                <%= link_to venue, class: "a-decoration-none" do %>
                    <span class="mx-2 fw-bold text-dark"><%= venue.username %></span>
                <% end %>
            </div>
        </div>
      </div>
      
      <div class="card-body">
        <div id="post<%= venue.id %>_images" class="carousel slide" data-bs-ride="true">
          <div class="carousel-inner">
           <div class=" container border-bottom d-flex justify-content-center align-icons-center my-5 gap-5 py-5" style="min-height:20rem">
            <%= image_tag venue.profile_picture.attached? ? venue.profile_picture : 'thumbnail.png', class: "img-thumbnail rounded-circle w-15 ", style: "max-width: 5rem; max-height: 5rem;" %>
    
            <div class="d-flex flex-column">
                <div class="d-flex align-items-center">
                    <p class="m-0 fw-bold"><%= venue.username %></p>
                    <% unless venue == current_venue %>
                        <button class="btn border border-1">Message</button>
                        <button class="btn btn-primary">Follow</button>
                    <% end %>
                    <% if venue == current_venue %>
                        <%= link_to "Edit Profile", edit_venue_registration_path, class: "btn btn-transparent border"%>
                    <% end %>
                </div>
                <div class="d-flex">
                    <small class="fw-bold"><%= pluralize(venue.followings.count, "Staff") %> </small>
                    <small class="fw-bold"><%= pluralize(100, "Events") %> </small>
                    <small class="fw-bold"><%= pluralize(100, "Horses") %> </small>
                </div>
                <div class="d-flex flex-column">
                    <smalll><%= venue.bio %></smalll>
                </div>
                <p>
              <%= link_to "Show this venue", venue %>
            </p>
            </div>
    
</div>
          </div>
        </div>
        
        </div>
    </div>
</div>
          
