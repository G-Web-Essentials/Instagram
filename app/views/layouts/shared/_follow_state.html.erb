<% if current_venue && current_venue.followings.include?(user) %>
         <%= button_to "Unregister staff member", unfollow_path(user_id: user.id), method: :delete, class:"btn btn-danger" %>
<% elsif current_venue && current_venue.waiting_followings.include?(user) %>
         <%= button_to "Cancel Request", cancel_request_path(user_id: user.id), method: :delete, class:"btn btn-secondary" %>
<% elsif current_venue %>
         <%= button_to "Register as Staff", follow_path(user_id: user.id), method: :post, class:"btn btn-primary" %>
<% elsif current_user && current_user == user %>
         <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-primary border" %>
<% end %>