<div id="post<%= comment.commentable_id %>ModalComment<%= comment.id %>"> 
    <div class="d-flex justify-content-between">
        <div class="d-flex">
            <%= image_tag 'thumbnail.png', class: "img-thumbnail rounded-circle ", style: "width: 2.5rem; max-height: 2.5rem;" %>
            <div class="d-flex flex-column mx-2 justify-content-center">
                <small class="fw-bold" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width:10rem;"><%= comment.commenter.email %></small>
                <small> <%= comment.body %></small>
                <small class="text-muted"> <%= time_ago_in_words(comment.created_at) %> ago</small>
            </div>
        </div>
        <% if comment.commenter == current_user || comment.commenter == current_venue %>
            <%= button_to comment_path(id: comment.id), method: :delete, style: "background:none; border:none" do %>
            <i class="fa fa-times"></i>
            <% end %>
        <% end %>
    </div>
</div>